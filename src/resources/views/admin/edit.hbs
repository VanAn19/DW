<div class="mt-4">
    <h3>Cập nhật sản phẩm</h3>

    <form class="mt-4" method="POST" action="/admin/{{product._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên sản phẩm</label>
            <input type="text" class="form-control" value="{{product.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="image">Ảnh</label>
            <input type="text" class="form-control" value="{{product.image}}" id="image" name="image">
        </div>
        <div class="form-group">
            <label for="type">Loại</label>
            <input type="text" class="form-control" value="{{product.type}}" id="type" name="type">
        </div>
        <div class="form-group">
            <label for="color">Màu</label>
            <input type="text" class="form-control" value="{{product.color}}" id="color" name="color">
        </div>
        <div class="form-group">
            <label for="size">Size</label>
            <input type="text" class="form-control" value="{{product.size}}" id="size" name="size">
        </div>
        <div class="form-group">
            <label for="price">Giá</label>
            <input type="text" class="form-control" value="{{product.price}}" id="price" name="price">
        </div>
        <div class="form-group">
            <label for="quantity">Số lượng</label>
            <input type="text" class="form-control" value="{{product.quantity}}" id="quantity" name="quantity">
        </div>
        
        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
</div>