<form method="post" action="/cart/store">
    <input type="hidden" class="form-control" id="productId" name="productId" value="{{product._id}}">
    <input type="hidden" class="form-control" id="name" name="name" value="{{product.name}}">
    <input type="hidden" class="form-control" id="price" name="price" value="{{product.price}}">
    <input type="hidden" class="form-control" id="color" name="color" value="{{product.color}}">
    <input type="hidden" class="form-control" id="image" name="image" value="{{product.image}}">
    <input type="hidden" class="form-control" id="size" name="size" value="{{product.size}}">
    <input type="hidden" class="form-control" id="status" name="status" value="00">
    {{!-- <input type="hidden" class="form-control" id="total" name="total" value="{{multiply this.price this.quantity}}"> --}}
    <input type="hidden" class="form-control" id="username" name="username" value="an">
    <div class="mt-4">
    <div class="row">
        <div class="col col-half">
            <img class="card-img-products" src="{{product.image}}" alt="{{product.name}}">
        </div>
        <div class="col col-half">
            <h2>{{product.name}}</h2>
            <p>{{product.color}}</p>
            <p>{{product.size}}</p>
            <p>${{product.price}} USD</p>
            <div class="quantity-container">
                <label for="quantity">Số lượng:</label>
                <input type="number" id="quantity" name="quantity" class="quantity-input" value="1" min="1">
            </div> 
            <button type="submit" class="add-to-cart-btn mt-16" {{#ifCond product.quantity 0}}disabled{{else}}{{/ifCond}}>ADD TO CART</button>
            {{#ifCond product.quantity 0}}
            <p class="mt-16"><i class="fa-solid fa-circle fa-2xs"></i> Out of stock</p>
            {{else}}
            <p class="mt-16"><i class="fa-solid fa-circle fa-beat-fade fa-2xs" style="color: #3ce000;"></i></i> In stock</p>
            {{/ifCond}}
            <ul class="mt-16">
                <li>Free express shipping</li>
                <li>Free returns</li>
                <li>Ships from Hong Kong</li>
                <li>Two years warranty</li>
            </ul>   
        </div>
    </div>
</div>
</form>
